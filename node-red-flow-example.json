        "z": "water-usage-flow",
        "name": "Generate Sample Data",
        "func": "// Generate sample water usage data for the last 12 months\nconst dataPoints = [];\nconst currentDate = new Date();\n\nfor (let i = 11; i >= 0; i--) {\n    const targetDate = new Date(currentDate.getFullYear(), currentDate.getMonth() - i, 1);\n    const yearMonth = targetDate.toISOString().substring(0, 7); // YYYY-MM format\n    \n    // Generate random usage between 15-35 mÂ³\n    const usage = Math.round((15 + Math.random() * 20) * 10) / 10;\n    \n    dataPoints.push({\n        year_month: yearMonth,\n        usage: usage\n    });\n}\n\nmsg.payload = {\n    data_points: dataPoints\n};\n\nreturn msg;",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
